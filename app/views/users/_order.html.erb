    <div class="bootcontainer">
      <div class="modal fade" id="oil" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="dialog">
              <div class="modal-content">
                  <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel">Oil Change</h4>
                  </div>
                  <div class="modal-body">
                      <%# if @car %>
                          <p style="margin-bottom: -5px;">Please Select A Car:</p>
                          <%= form_for @order, url: user_orders_path(current_user, action: 'orders')  do |f| %>
                            <% f.label :service_type %>
                            <% f.text_field :service_type, input_html: { value: 'oil change' } %>
                            <% @cars.each do |car| %>
                            <div class="radio">
                                <label style="text-transform: uppercase;"><input type="radio" name="order[user_car]"><%= car.make %> <%= car.licence_plate %></label>
                             </div>
                            <% end %>
                            <!--<div class="checkbox">-->
                              <%= f.label :Add_Car_Clean, style:"text-transform: capitalize;" %>
                              <%= f.check_box :extra_service %>
                            <!--</div>-->
                          
                      <%# else %>
                          <%#= link_to "Add Cars", user_cars_path(current_user) %>
                      <%# end %>
                      
                        <div>
                            <% if current_user.profile %>
                                <p>Your car will picked up @ <em style="text-transform: uppercase;"><%= current_user.profile.address %>.</em> <%= link_to "Change Address",  edit_user_profile_path(current_user) %></p>
                                <% else %>
                                <%= link_to "Add Your Info", new_user_profile_path(current_user) %>
                            <% end %>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Cancel</button>
                        <%= f.submit "Send", class: 'btn btn-primary' %>
                    </div>
                  <% end %>
              </div>
          </div>
      </div>
    </div>