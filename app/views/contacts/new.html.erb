    <% if user_signed_in? %>
        <div class="user">
          <div class="flat-green">
              <div class="app-container">
                  <div class="row content-container">
                      <!--Top nav===========================================================================================================-->
                      <%= render partial: "users/top_nav" %>
                      <!--Side menu begins =================================================================================================-->
                      <%= render partial: "users/side_nav" %>
                      <!-- Main Content==================================================================================================== --> 
                       <div class="mcontainer">  
                        <div class="row">
                          
                          <div class="col-md-4 col-md-offset-4">
                            <p><% flash.each do |key, value| %>
                              <%= content_tag :div, value, class: "alert alert-#{key}" %>
                            <% end %></p>
                            <h1 class="text-center">Contact Us</h1>
                            <p class="text-center">Have more questions or comments?</p>
                          </div>
                        
                      
                          <div class="col-md-4 col-md-offset-4">
                            <%= form_for @contact do |f| %>
                              <div class="form-group">
                                <%= f.label :name %>
                                <%= f.text_field :name, class: 'form-control', value: "#{current_user.profile.first_name + ' ' + current_user.profile.last_name}" %>
                              </div>
                      
                              <div class="form-group">
                                <%= f.label :email %>
                                <%= f.email_field :email, class: 'form-control', value: "#{current_user.profile.contact_email}"  %>
                              </div>
                      
                              <div class="form-group">
                                <%= f.label :message %>
                                <%= f.text_area :message, class: 'form-control' %>
                              </div>
                              
                              <%= f.submit 'Send', class: 'btn btn-default' %>
                            <% end %>
                          </div>
                        </div>
                      <!-- End Main Content==================================================================================================== -->
                </div>
            </div>
        </div>
    </div>
    
    <% else %>

    <div class="container">  
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <p><% flash.each do |key, value| %>
            <%= content_tag :div, value, class: "text-center alert alert-#{key}" %>
          <% end %></p>
          <h1 class="text-center">Contact Us</h1>
          <p class="text-center">Have more questions or comments?</p>
        </div>
      
  
        <div class="col-md-4 col-md-offset-4">
          <%= form_for @contact do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
    
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
    
            <div class="form-group">
              <%= f.label :message %>
              <%= f.text_area :message, class: 'form-control' %>
            </div>
            
            <%= f.submit 'Send', class: 'btn btn-default' %>
          <% end %>
        </div>
      </div>
  </div>
  
<% end %>
