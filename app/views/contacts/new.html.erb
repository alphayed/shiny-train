<% if user_signed_in? %>
  <div class="user">
    <div class="flat-green">
      <div class="app-container">
        <div class="row content-container">
          <!--Top nav===========================================================================================================-->
          <%= render partial: "users/top_nav" %>
          <!--Side menu begins =================================================================================================-->
          <%= render partial: "users/side_nav" %>
          <!-- Main Content==================================================================================================== -->
          <div class="mcontainer">
            <div class="row">

              <div class="col-md-4 col-md-offset-4">
                <h1 class="text-center">Contact Us</h1>
                <p class="text-center">Have more questions or comments?</p>
                <h5 class="text-center"><% flash.each do |key, value| %>
                  <% if key == 'success' %>
                    <%= content_tag :div, value, class: "text-#{key} fa fa-check-square-o" %>
                  <% else %>
                    <%= content_tag :div, value, class: "text-#{key} fa fa-exclamation-triangle" %>
                  <% end %>
                <% end %>
                </h5>
              </div>

              <div class="col-md-4 col-md-offset-4">
                <%= simple_form_for @contact do |f| %>
                  <div class="form-group">
                    <%= f.label :name %>
                    <% if current_user.profile %>
                      <%= f.text_field :name, class: 'form-control', value: "#{current_user.profile.first_name + ' ' + current_user.profile.last_name}" %>
                    <% else %>
                      <%= f.text_field :name, style: 'text-transform: capitalize;',class: 'form-control' %>
                    <% end %>
                  </div>

                  <div class="form-group">
                    <%= f.label :email %>
                    <% if current_user.profile %>
                      <%= f.email_field :email, class: 'form-control', value: "#{current_user.profile.contact_email}"  %>
                    <% else %>
                      <%= f.email_field :email, style: 'text-transform: uppercase;', class: 'form-control' %>
                    <% end %>
                  </div>

                  <div class="form-group">
                    <%= f.label :message %>
                    <%= f.text_area :message, class: 'form-control' %>
                  </div>

                  <%= f.submit 'Send', class: 'btn btn-default btn-sm' %>
                <% end %>
                <br>
                <p>Or</p>
                <h2>Email</h2>
                <p>
                <a href="mailto:support@getfixa.com">support@getfixa.com</a>
                </p>
              </div>
            </div>
            <!-- End Main Content==================================================================================================== -->
          </div>
        </div>
      </div>
    </div>

  <% else %>

    <div class="container">
      <div class="row">
        <h1 class="text-center">Contact Us</h1>
        <p class="text-center">Have more questions or comments?</p>
        <h5 class="text-center"><% flash.each do |key, value| %>
          <% if key == 'success' %>
            <%= content_tag :div, value, class: "text-#{key} fa fa-check-square-o" %>
          <% else %>
            <%= content_tag :div, value, class: "text-#{key} fa fa-exclamation-triangle" %>
          <% end %>
        <% end %>
        </h5>
      </div>

      <div class="col-md-4 col-md-offset-4">
        <%= simple_form_for @contact do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, style: 'text-transform: capitalize;', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, style: 'text-transform: uppercase;', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :message %>
            <%= f.text_area :message, class: 'form-control' %>
          </div>

          <%= f.submit 'Send', class: 'btn btn-default btn-sm' %>
        <% end %>
        <br>
        <p>Or</p>
        <h2>Email</h2>
        <p>
        <a href="mailto:support@getfixa.com">support@getfixa.com</a>
        </p>
      </div>
    </div>
  </div>

<% end %>
