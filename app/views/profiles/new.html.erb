    <div class="user">
        <div class="flat-green">
            <div class="app-container">
                <div class="row content-container">
                    <!--Top nav===========================================================================================================-->
                    <%= render partial: "users/top_nav" %>
                    <!--Side menu begins =================================================================================================-->
                    <%= render partial: "users/side_nav" %>
                    <!-- Main Content==================================================================================================== -->
                    <div class="mcontainer">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3">
                                <h1 class="text-center">Add Info</h1>

                                    <h5 class="text-center"><% flash.each do |key, value| %>
                                        <%= content_tag :div, value, class: "alert alert-#{key} fa fa-check-square" %>
                                      <% end %>
                                    </h5>
                          <% if current_user.profile %>
                            <%= image_tag @user.profile.avatar.url, class: 'img-circle img-responsive', width: '100', height: '100' %><br />
                          <% else %>
                            <div>
                              <img class="img-circle img-responsive", width="100", height="100" src="/img/img.jpg" alt="Default Img" /><br />
                            </div>
                          <% end %>

                                <div>
                                    <%= render 'form' %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Main Content==================================================================================================== -->
                </div>
            </div>
        </div>
    </div>

