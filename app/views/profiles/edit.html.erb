    <div class="user">
        <div class="flat-green">
            <div class="app-container">
                <div class="row content-container">
                    <!--Top nav===========================================================================================================-->
                    <%= render 'top_nav' %>
                    <!--Side menu begins =================================================================================================-->
                    <%= render 'side_nav' %>
                    <!-- Main Content==================================================================================================== -->
                    <div class="mcontainer"> <!--The mcontainer adjusts the height for the update form found in custom.css.scss-->
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3">
                                <h1 class="text-center">Edit Info</h1>
                                
                                    <h4 class="text-center"><% flash.each do |key, value| %>
                                        <%= content_tag :div, value, class: "alert alert-#{key} fa fa-check-square" %>
                                        <% end %></h4>
                                        
                                <div>
                                    <%= render 'form' %>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <!-- End Main Content==================================================================================================== -->
                </div>
            </div>
        </div>
    </div>

             